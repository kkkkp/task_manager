<h1>Hello</h1>
<p>Current user is <%= current_user.email%></p>
<p>Current user id is : <%= current_user.id%></p>

<h3>Todo List</h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Time</th>
      <th><%= link_to 'New Todo', new_todo_path%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.where("user_id" == current_user.id).each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.content %></td>
        <td><%= todo.time %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

